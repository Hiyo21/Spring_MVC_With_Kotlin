<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mvc.mappers.PostMapper">

    <select id="getTime" resultType="String">
        select now()
    </select>

    <insert id="insertPost" parameterType="mvc.domain.Post">
        insert into t_Post(post_no, post_title, content, poster) values(#{postNo}, #{postTitle}, #{content})
    </insert>

    <delete id="deletePost" parameterType="string">
        delete from t_Post where userid = #{userid}
    </delete>

    <delete id="deleteAll">
        delete from t_Post
    </delete>

    <update id="updatePost" parameterType="mvc.domain.Post">
        update t_Post set username = #{username}, userpw = #{userpw}, email = #{email}, update_date = now() where userid = #{userid}
    </update>

    <select id="selectPost" parameterType="string" resultMap="PostResultMap">
        select * from t_Post where userid = #{userid}
    </select>

    <select id="selectAllPosts" resultType="mvc.domain.Post">
        select * from t_Post
    </select>

    <resultMap id="PostResultMap" type="mvc.domain.Post">
        <id property="userid" column="userid"/>
        <result column="userpw" property="userpw"/>
        <result column="username" property="username"/>
        <result column="email" property="email"/>
        <result column="regDate" property="reg_date"/>
        <result column="updateDate" property="update_date"/>
    </resultMap>
</mapper>